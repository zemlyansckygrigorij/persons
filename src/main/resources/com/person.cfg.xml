<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "com.entity.Person" table = "persons">
        <id name = "id" column = "id">
            <generator class="native"/>
        </id>

        <property name ="firstName" column = "first_name" type = "String"/>
        <property name ="lastName" column = "last_name" type = "String"/>
        <property name ="dateBirth" column ="date_birth" type="java.util.Date"/>
        <property name ="marriageInt" column="marriage" type ="java.lang.Integer"/>
        <property name ="balance" column="balance" type="java.lang.Double"/>

    </class>
</hibernate-mapping>

